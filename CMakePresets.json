{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28
    },
    "configurePresets": [
        {
            "name": "windows-debug",
            "displayName": "Windows Debug (with vcpkg manifest)",
            "generator": "Ninja",
            "binaryDir": "build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "C:/projects/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_MANIFEST_DIR": "${sourceDir}/MobyDick",
                "VCPKG_INSTALLED_DIR": "${sourceDir}/vcpkg_installed"
            }
        },
        {
            "name": "windows-release",
            "displayName": "Windows Release (with vcpkg manifest)",
            "generator": "Ninja",
            "binaryDir": "build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "C:/projects/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_MANIFEST_DIR": "${sourceDir}/MobyDick",
                "VCPKG_INSTALLED_DIR": "${sourceDir}/vcpkg_installed"
            }
        }
    ]
}
